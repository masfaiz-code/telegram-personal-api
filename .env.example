# Telegram API credentials dari https://my.telegram.org
API_ID=your_api_id
API_HASH=your_api_hash

# Session string dari pyrogram (jalankan generate_session.py)
SESSION_STRING=your_session_string

# Secret API key untuk authentication (buat dengan: openssl rand -hex 32)
API_KEY=your_secret_api_key

# Webhook URL untuk menerima notifikasi reply (optional)
# Contoh: https://your-n8n.com/webhook/telegram
WEBHOOK_URL=

# Chat IDs yang akan di-monitor (comma-separated, optional)
# Kosongkan untuk monitor semua chat
# Contoh: -1001234567890,-1009876543210
MONITOR_CHAT_IDS=

# Berapa jam tracking message disimpan sebelum expired (default: 24)
TRACK_EXPIRY_HOURS=24
